{
    "name": "simpleid/simpleid-tool",
    "description": "Utility for SimpleID",
    "require": {
        "php": "^7.2 || ^8.0",
        "ext-hash": "*",
        "mustangostang/spyc": "~0.6",
        "symfony/console": "^4.0 || ^5.0 || ^6.0"
    },
    "require-dev": {
        "consolidation/robo": "^3.0 || ^4.0",
        "bamarni/composer-bin-plugin": "^1.8"
    },
    "bin": [
        "bin/simpleid-tool"
    ],
    "scripts": {
        "phar-old": [ "@composer install", "@composer bin box install", "robo phar" ],
        "phar": [ "@composer install", "@composer bin box install", "box" ],
        "update-copyright": [ "@composer install", "robo update_copyright" ]
    },
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Kelvin Mo",
            "email": "kmo@users.sourceforge.net"
        }
    ],
    "autoload": {
        "psr-4": { "SimpleIDTool\\": "src" }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": false
        }
    }
}
